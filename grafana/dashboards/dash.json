{
  "id": null,
  "title": "Node Exporter & Django Metrics",
  "tags": ["docker", "prometheus"],
  "timezone": "browser",
  "schemaVersion": 42,
  "version": 1,
  "panels": [
    {
      "type": "graph",
      "title": "Node CPU Usage",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(node_cpu_seconds_total[1m])",
          "legendFormat": "{{instance}} CPU",
          "interval": ""
        }
      ],
      "gridPos": {"x":0,"y":0,"w":12,"h":6}
    },
    {
      "type": "graph",
      "title": "Node Memory Available",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "node_memory_MemAvailable_bytes",
          "legendFormat": "{{instance}} Memory",
          "interval": ""
        }
      ],
      "gridPos": {"x":12,"y":0,"w":12,"h":6}
    },
    {
      "type": "graph",
      "title": "Django HTTP Requests Total",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "django_http_requests_total",
          "legendFormat": "{{instance}} requests",
          "interval": ""
        }
      ],
      "gridPos": {"x":0,"y":6,"w":12,"h":6}
    },
    {
      "type": "graph",
      "title": "Django Request Latency",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "django_request_latency_seconds",
          "legendFormat": "{{instance}} latency",
          "interval": ""
        }
      ],
      "gridPos": {"x":12,"y":6,"w":12,"h":6}
    }
  ],
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(up, job)",
        "includeAll": true,
        "multi": true,
        "current": {"text":"All","value":["All"]}
      },
      {
        "name": "instance",
        "type": "query",
        "datasource": "Prometheus",
        "query": "label_values(up, instance)",
        "includeAll": true,
        "multi": true,
        "current": {"text":"All","value":["All"]}
      }
    ]
  },
  "time": {"from":"now-1h","to":"now"},
  "timepicker": {"refresh_intervals":["5s","10s","30s","1m","5m","15m","30m","1h","2h","1d"]}
}
